<h1>Les informations de cet utilisateur</h1>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Nombre de tâche:</strong>
  <%= @user.tasks.count %>
</p>
<%= link_to 'Editer', edit_admin_user_path(@user), class: "btn btn-primary text-white" %>
<%= link_to 'Retour', admin_users_path, class: 'btn btn-danger text-white' %>

<br><br>
<h2>Les tâches de cet utilisateur</h2>
<br>
<table class="w-100 border">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Detail</th>
      <th>Date de fin</th>
      <th>Statut</th>
      <th>Priorité</th>
      <th>Utilisateur</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.tasks.each do |task| %>
      <tr class="border">
        <td class="names"><%= task.name %></td>
        <td><%= task.detail %></td>
        <td><%= task.expired_at %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.user.name %></td>
        <td><%= link_to 'Consulter', task, class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Editer', edit_task_path(task), class: "btn btn-outline-success" %></td>
        <td><%= link_to 'Suprimer', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>