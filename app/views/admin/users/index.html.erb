<h1>La liste de tous les utilisateurs</h1>
<br><br>
<%= link_to 'Nouvel utilisateur', new_admin_user_path, class: 'btn btn-primary text-white' %>
<br><br><br><br>
<table class="w-100 border">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Nombre de tÃ¢che</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="border">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.tasks.count %></td>
        <td><%= link_to 'Consulter', admin_user_path(user), class: "btn btn-outline-primary" %></td>
        <td><%= link_to 'Editer', edit_admin_user_path(user), class: "btn btn-outline-success" %></td>
        <td><%= link_to 'Supprimer', admin_user_delete_path(user), method: :delete, class: "btn btn-outline-danger", id: "supprimer#{user.id}" %></td>
        <% if user.admin==true %>
          <td><%= link_to 'Supprimer des admins', admin_user_not_do_admin_path(user), class: "btn btn-outline-danger" %></td>
        <% else %>
          <td><%= link_to 'Ajouter aux admins', admin_user_do_admin_path(user), class: "btn btn-outline-success" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
