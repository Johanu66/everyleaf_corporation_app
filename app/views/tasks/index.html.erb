<p id="notice"><%= notice %></p>

<h1>Tâches</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="names"><%= task.name %></td>
        <td><%= task.detail %></td>
        <td><%= link_to 'Consulter', task %></td>
        <td><%= link_to 'Editer', edit_task_path(task) %></td>
        <td><%= link_to 'Suprimer', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvelle tâche', new_task_path %>
